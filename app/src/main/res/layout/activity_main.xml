<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        style="@style/background"/>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/app_name"
       android:textSize="40sp"
       android:textStyle="bold"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="40dp"
       android:id="@+id/welcomeTV"
       android:fontFamily="casual"
       android:textColor="@color/colorPrimary"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernameRL"
        android:layout_below="@+id/welcomeTV"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerTV"
            android:text="@string/playerTV"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginEnd="10dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerNameET"
            android:layout_toEndOf="@+id/playerTV"
            android:layout_marginStart="10dp"
            android:hint="@string/playernameET"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AcceptRl"
        android:layout_below="@+id/usernameRL"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acceptBtn"
            android:text="@string/acceptBtn"
            android:background="@drawable/green_btn"
            android:alpha="0.9"
            android:textAllCaps="false"/>


    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/AcceptRl"
    android:layout_centerInParent="true"
    android:layout_marginTop="30dp">
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/birthday_balloons"
        android:scaleType="fitXY"
        android:background="@null"
        android:id="@+id/balloonsIV" />

</RelativeLayout>
</RelativeLayout>